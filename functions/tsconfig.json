{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "target": "es2017",
    "skipLibCheck": true,
    "types": []
  },
  "compileOnSave": true,
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
  "include": ["src"]
}
